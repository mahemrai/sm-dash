{% extends "layout/layout.html.twig" %}

{% block content %}

<div class="col-sm-12">
    <h2>Accounts</h2>
</div>

<div class="col-sm-6">
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <div class="row">
                    <div class="col-sm-10"><h3><i class="fa fa-twitter-square"></i> Twitter</h3></div>
                    <div class="col-sm-2">
                        <a id="account-info" value="Twitter" data-toggle="modal" data-target="#account-form" class="btn btn-sm btn-default">
                            <i class="fa fa-info-circle"></i> Info
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-sm-6">
    <div class="row">
        <div class="col-sm-12">
            <div class="well">
                <div class="row">
                    <div class="col-sm-10"><h3>Scoop.it</h3></div>
                    <div class="col-sm-2">
                        <a id="account-info" value="Scoopit" data-toggle="modal" data-target="#account-form" class="btn btn-sm btn-default">
                            <i class="fa fa-info-circle"></i> Info
                        </a>
            </div>
        </div>
    </div>
</div>

<div id="account-form" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="message"></div>
                <form role="form" method="post" action="">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="api-account">
                    </div>
                    <div class="form-group">
                        <label for="apiKey">Api Key</label>
                        <input type="text" class="form-control" id="api-key">
                    </div>
                    <div class="form-group">
                        <label for="apiSecret">Api Secret</label>
                        <input type="text" class="form-control" id="api-secret">
                    </div>
                    <div class="form-group">
                        <label for="oauthToken">Oauth Token</label>
                        <input type="text" class="form-control" id="oauth-token">
                    </div>
                    <div class="form-group">
                        <label for="oauthSecret">Oauth Secret</label>
                        <input type="text" class="form-control" id="oauth-secret">
                    </div>
                    <button id="save-details" class="btn btn-sm btn-primary edit">
                        <strong><i class="fa fa-save"></i> Save</strong>
                    </button>
                    <button class="btn btn-sm btn-default" data-dismiss="modal">
                        <strong><i class="fa fa-plus-circle"></i> Cancel<strong>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}