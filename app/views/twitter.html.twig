{% extends "layout/layout.html.twig" %}

{% block content %}
<div class="col-sm-6">
    <div class="row">
        <div class="col-sm-12">
            <h2>Your Stats</h2>

            <div class="well">
                <span>
                    Followers: {{ stats.followers }} 
                    Friends: {{ stats.friends }} 
                    Listed: {{ stats.listed }} 
                    Favourites: {{ stats.favourites }} 
                    Tweets: {{ stats.statuses }}
                </span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <h2>Post Tweet</p>
        </div>
    </div>
</div>

<div class="col-sm-6">
    <h2>Your Timeline</h2>

    {% for tweet in tweets %}
        <div class="well">
            <p>
                <img src="{{ tweet.user.profile_image_url }}"/>
                <a href="http://twitter.com/{{ tweet.user.screen_name }}">{{ tweet.user.name }}</a>
            </p>

            {{ display_tweet(tweet.text, tweet.entities) }}

            <p>
                {{ tweet.created_at | date('Y-m-d') }}
                <span>Retweets: {{ tweet.retweet_count }} Favorites: {{ tweet.favorite_count }}</span>
            </p>
        </div>
    {% endfor %}
</div>

<div id="image-viewer" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body"></div>
        </div>
    </div>
</div>

{% endblock %}